---
import Github from "./icons/github.astro";

const { position, company, start, end } = Astro.props;
---
<article>
    <i></i>
    <div class="linear-flow">
        <div class="reveal reveal-left">
            <h3>{position}</h3> &middot; <h5>{company}</h5>
            <h6>{start} - {end || "Present"}</h6>
        </div class="reveal reveal-left">
        <p class="reveal reveal-left"><slot/></p>
    </div>
</article>

<style>
    article > div {
        text-align: left;
        background-color: var(--colorSecondary);
        padding: 2em;
        margin-left: 65px;
        position: relative;
    }

    article > div::before {
        content: "";
        width: 0;
        height: 0;
        position: absolute;
        border-style: solid;
        border-width: 9px 9px 9px 0;
        border-color: transparent var(--colorSecondary) transparent transparent;
        left: -9px;
        top: 14px;
    }

    article > i {
        display: block;
        float: left;
        border: 4px solid var(--colorBg);
        border-radius: 50%;
        background-color: var(--colorSecondary);
        width: 40px;
        height: 40px;
    }

    h3, h5 {
        display: inline-block;
    }

    h6 {
        color: var(--colorParagraph);
    }
</style>