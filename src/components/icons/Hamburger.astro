---
const { id } = Astro.props;
---
<div class="hamburger" id={id}>
    <span></span>
    <span></span>
    <span></span>
</div>
  
  <style>
    .hamburger {
        width: 25px;
        cursor: pointer;
        position: relative;
        vertical-align: middle;
        padding-left: 0.75em;
        display: none;
    }

    .hamburger > span {
        background-color: var(--colorParagraph);
        height: 2px;
        margin: 7px 0;
        border-radius: 5px;
        display: block;
        transition: transform 200ms ease;
    }

    .hamburger > span:nth-child(1) { width: 50%; }
    .hamburger > span:nth-child(2) { width: 100%; }
    .hamburger > span:nth-child(3) { width: 75%; }

    @media screen and (max-width: 768px) {
      .hamburger {
        display: inline-block;
      }
    }
  </style>