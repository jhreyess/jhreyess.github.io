---
import Github from './icons/github.astro';
import Deployment from './icons/deployment.astro';

import { Image } from 'astro:assets';

const { title, image, source, deployment } = Astro.props;
---
<section class="small-linear-flow">
    <Image src={image} alt="Project showcase"/>
    <div class="small-linear-flow">
        <h3>{title}</h3>
        <p><slot/></p>
        <div class="horizontal-linear-flow">
            {source && <Github to={source} />}
            {deployment && <Deployment to={deployment} />}
        </div>
    </div>
</section>

<style>
    section {
        padding: 1em;
        text-align: left; 
        box-sizing: border-box;
        width: 30%;
        min-width: min-content;
        max-width: 420px;
    }

    section > img {
        object-fit: cover;
        border-radius: 8px;
        width: 100%;
        height: auto;
    }

    section > div > p {
        min-height: 5em;
    }

    @media screen and (max-width: 768px) {
        section {
            width: 100%;
        }

        section > .image-wrapper {
            width: 100%;
        }
    }

</style>